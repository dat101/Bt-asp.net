@model IEnumerable<PetShop.Data.Pet>

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="main">
    <div class="background1">
       <img src="https://happypaws.vn/wp-content/uploads/banner-welcome.png" width="100%"/>
    </div>
</div>

<div class="headline">
    <h3>Cún bán phổ biến</h3>
    <button class="btn1 bg-warning"></button>
</div>

<div class="row">       
    @foreach (var item in Model.Where(b => b.GiongLoai == "Chó"))
    {
        <partial name="ProductTemplate" model="item" />
    }
</div>

<div class="headline">
    <h3>Mèo bán phổ biến</h3>
    <button class="btn1 bg-warning"></button>
</div>

<div class="row">
    @foreach (var item in Model.Where(b => b.GiongLoai == "Mèo"))
    {
        <partial name="ProductTemplate" model="item" />
    }
</div>
