@model PetShop.Data.Pet

@{
    ViewData["Title"] = "Thông tin đơn hàng";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">               
                <div class="col-md-4">
                    <img src="https://sieupet.com/sites/default/files/giong_meo_ragdoll9.jpg" width="100%" alt="@Model.ThuCung">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Tên:</b> @Model.ThuCung
                        </p>
                        <p class="card-text">
                            <b>Giống loài:</b> @Model.GiongLoai
                        </p>
                        <p class="card-text">
                            <b>Giới tính:</b> @Model.GioiTinh
                        </p>
                        <p class="card-text">
                            <b>Thời gian đưa lên:</b> @Model.NgayMua
                        </p>
                        <p class="card-text">
                            <b>Giá:</b> @string.Format("{0:#,0}", Model.Gia) đ
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-primary float-right" asp-action="Index">
                                <i class="bi bi-arrow-left-circle"></i> Trở về
                            </a>
                            <a class="btn btn-success"
                              asp-action="Index" asp-route-id="@Model.Id"><i class="fas fa-shopping-cart"></i> Mua</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
